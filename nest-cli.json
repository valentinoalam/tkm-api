{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "./core/config/*.yaml",
        "outDir": "dist",
        "watchAssets": true
      }
    ],  
    "plugins": [
      "@nestjs/swagger"
    ]
  }
}
